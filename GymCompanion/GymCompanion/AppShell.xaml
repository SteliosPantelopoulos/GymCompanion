<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymCompanion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GymCompanion"
    xmlns:views="clr-namespace:GymCompanion.Views"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Label>Menu</Label>
    </Shell.FlyoutHeader>

    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />

    <ShellContent Title="Details Exercises" ContentTemplate="{DataTemplate views:Exercises.ExercisesList}" />

    <ShellContent Title="Details Bodyparts" ContentTemplate="{DataTemplate views:BodyParts.BodyPartsList}" />
</Shell>
